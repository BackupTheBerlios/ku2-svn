Import("env", "mode")
env = env.Clone()

#	Disable debugging on release:
if mode == "release":
	env.Append(CPPDEFINES = ["NDEBUG"])

#	We are only reading INI files:
env.Append(CPPDEFINED = ["INI_READONLY"])

#	minIni library
minIni = env.StaticLibrary("minIni", "minIni.c")
Return("minIni")
