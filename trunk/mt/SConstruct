import os
env = Environment(ENV = {'PATH' : os.environ['PATH']})

xelatex_bld = Builder(
	action = "xelatex $SOURCE",
	suffix = ".pdf",
	src_suffix = ".tex")
env.Append(BUILDERS = {"XeLaTeX" : xelatex_bld})

dia_bld = Builder(
	action = "dia -e $TARGET -s 1200x -t png $SOURCE",
	suffix = ".png",
	src_suffix = ".dia")
env.Append(BUILDERS = {"Dia" : dia_bld})

thesis = env.XeLaTeX("thesis")

